<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="270dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_remind"
            android:padding="0dp">

        <ImageView
                android:id="@+id/imgDeviceClassifyIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_message_classify_livingroom"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                <ImageView
                        android:id="@+id/imgDeviceIcon"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:padding="6dp"
                        android:scaleType="fitXY"/>

                <Button
                        android:id="@+id/btnDeviceDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxEms="9"
                        android:singleLine="true"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_remind_device_alarm"/>

            <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>